extends layout

include mixins/_productCard

block content
    .inner
        h2 Category: #{category}
        ul.tags.tags--flex
            each c in categories
                li.tag
                    a.tag__link(href=`/products/c/${c._id}` class=(c._id === category ? 'tag__link--active' : ''))
                        span.tag__text= `${c._id}s`
                        //- span.tag__count= c.count
        .stores
            each product in products
                +productCard(product)
                