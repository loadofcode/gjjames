extends layout

include mixins/_productCard

block content
    .inner
        h2 #{title}
        ul.tags.tags--flex
            each c in categories
                li.tag
                    a.tag__link(href=`/products/c/${c._id}`)
                        span.tag__text= c._id
                        //- span.tag__count= c.count
        .stores
            each product in products
                +productCard(product)
                