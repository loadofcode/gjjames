mixin filtersList(tagParents = {})
  .filters
    .filter-parent__list
      .filter-title__wrapper
        h3 Filter By
        div.clear__wrapper
          span.btn-clear--filter.hidden__mobile.hidden__tablet clear all
      each parent in tagParents
        h4.filter-parent__title= parent.tagParentName
        ul.filter-children__list
          each child in parent.tags
            li.filter-children__item
              input(type="checkbox", id=child value=child name=child class="filters--checkbox")
              label(for=child)= child
